#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"

BUILD_DIR=$1
ENV_DIR=$3
VENDOR_DIR="vendor"

if [ -f "$ENV_DIR/FFMPEG_VERSION" ]
then
  FFMPEG_VERSION="$(cat $ENV_DIR/FFMPEG_VERSION)"
  DOWNLOAD_URL="https://www.johnvansickle.com/ffmpeg/old-releases/ffmpeg-$FFMPEG_VERSION-64bit-static.tar.xz"
  if curl -s --head --request GET $DOWNLOAD_URL | grep "404" > /dev/null
  then
    DOWNLOAD_URL="https://www.johnvansickle.com/ffmpeg/releases/ffmpeg-$FFMPEG_VERSION-64bit-static.tar.xz"
  fi
else
  DOWNLOAD_URL="https://www.johnvansickle.com/ffmpeg/releases/ffmpeg-release-64bit-static.tar.xz"
fi

if curl -s --head --request GET $DOWNLOAD_URL | grep "404" > /dev/null
then
  exit 1
fi

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p ffmpeg
cd ffmpeg
curl -L --silent $DOWNLOAD_URL | tar xJ --strip-components=1

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/ffmpeg"' >> $PROFILE_PATH
